<div class="contents row">
  <div class="container">
    <h2>ユーザー編集</h2>
    <%= form_with model: @user, url: user_path(params[:id]),method: :patch, id: 'new_user', class: 'new_user', local: true do |f| %>
      <div class="field">
        <%= f.label :name %><br />
        <%= f.text_field :name %>
      </div>
      <div class="field">
        <%= f.label :email %><br />
        <%= f.email_field :email %>
      </div>
        <div class="field">
        <%= f.label :hobby %><br />
        <%= f.text_field :hobby %>
      </div>
      <div class="field">
        <%= f.label :一言自己紹介 %><br />
        <%= f.text_area :introduction %>
      </div>
      <div class="actions">
        <%= f.submit "編集した内容を保存する" %>
      </div>
    <% end %>
  </div>
</div>