<%# 写真の概要 %>
<div class="item-show">
  <div class="item-box">
    <div class="item-img-content">
      <%= image_tag @content.image ,class:"item-box-img" %>
    </div>
          <h2 class="name">
      <%= @content.title %>
    </h2>
    <div class="item-explain-box">
      <span><%= @content.user.name %></span>
    </div>
    <table class="detail-table">
      <tbody>
        <tr>
          <th class="detail-item">説明</th>
          <td class="detail-value"><%= @content.explain %></td>
        </tr>
      </tbody>
    </table>
<%# 編集・削除機能 %>
          <% if user_signed_in? && @content.user.id == current_user.id %>
            <%= link_to "投稿情報の編集", edit_content_path(@content.id), method: :get, class: "item-red-btn" %>
            <p class="or-text">or</p>
            <%= link_to "削除", content_path(@content.id), method: :delete, class:"item-destroy" %>
          <% else %>
          <% end %>
<%# 編集・削除機能 %>

    <%#いいねボタン <div class="option">
      <div class="favorite-btn">
        <%= image_tag "star.png" ,class:"favorite-star-icon" ,width:"20",height:"20"
        <span>お気に入り 0</span>
      </div>
      <div class="report-btn">
        <%= image_tag "flag.png" ,class:"report-flag-icon" ,width:"20",height:"20"
        <span>不適切な商品の通報</span>
      </div>
    </div>
  </div> %>
  <%# 写真の概要 %>

  <div class="comment-box">
    <form>
      <textarea class="comment-text"></textarea>
      <p class="comment-warn">
        相手のことを考え丁寧なコメントを心がけましょう。
        <br>
        不快な言葉遣いなどは利用制限や退会処分となることがあります。
      </p>
      <button type="submit" class="comment-btn">
        <%= image_tag "comment.png" ,class:"comment-flag-icon" ,width:"20",height:"25"%>
        <span>コメントする<span>
      </button>
    </form>
  </div>
